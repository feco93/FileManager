<Window x:Class="FileManager.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d" Width="325" Height="140"
        ResizeMode="NoResize" Title="FileManager" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1.3*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" x:Name="Input" TextWrapping="Wrap" Height="25" PreviewKeyDown="Input_PreviewKeyDown" VerticalAlignment="Center" Margin="5,0" />
        <TextBlock Grid.Row="0" x:Name="Header" TextWrapping="Wrap" Height="25" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="14.667" Margin="5,0" />
        <Button x:Name="OkBtn" Grid.Row="2" Content="Ok" VerticalAlignment="Center" Width="70" HorizontalAlignment="Right" Margin="0,0,110,0" Height="22" Click="OkBtn_Click"/>
        <Button x:Name="CancelBtn" Grid.Row="2" Content="Cancel" VerticalAlignment="Center" HorizontalAlignment="Right" Width="70" RenderTransformOrigin="1.214,0.55" Margin="0,0,5,0" Height="22" Click="CancelBtn_Click"/>

    </Grid>
</Window>
