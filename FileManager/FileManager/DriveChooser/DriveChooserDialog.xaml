<Window x:Class="FileManager.DriveChooserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="Error" Height="211.219" Width="345.891" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="ErrorMessage" Content="" HorizontalAlignment="Left" Margin="22,27,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Choose another drive:" HorizontalAlignment="Left" Margin="22,71,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="driveCb"  HorizontalAlignment="Left" Margin="220,75,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.232,0.054"/>
        <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="123,122,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="okButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="220,122,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="cancelButton_Click"/>

    </Grid>
</Window>
